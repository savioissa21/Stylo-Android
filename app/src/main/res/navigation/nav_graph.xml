<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.styloandroid.ui.splash.SplashFragment"
        android:label="Splash"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splash_to_client_home"
            app:destination="@id/clientHomeFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splash_to_login"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splash_to_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.styloandroid.ui.auth.LoginFragment"
        android:label="Login">
        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_login_to_home"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_login_to_client_home"
            app:destination="@id/clientHomeFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.styloandroid.ui.auth.RegisterFragment"
        android:label="Registrar">
        <action
            android:id="@+id/action_register_to_home"
            app:destination="@id/homeFragment" />
    </fragment>


    <fragment
        android:id="@+id/clientHomeFragment"
        android:name="com.example.styloandroid.ui.client.home.ClientHomeFragment"
        android:label="Home Cliente"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_client_home_to_login"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_client_home_to_detail"
            app:destination="@id/establishmentDetailFragment" />
        <action
            android:id="@+id/action_client_home_to_appointments"
            app:destination="@id/clientAppointmentsFragment" />

        <!-- NOVO: Ação para Perfil -->
        <action
            android:id="@+id/action_client_home_to_profile"
            app:destination="@id/clientProfileFragment" />
    </fragment>

    <!-- NOVO DESTINO -->
    <fragment
        android:id="@+id/clientProfileFragment"
        android:name="com.example.styloandroid.ui.client.profile.ClientProfileFragment"
        android:label="Meu Perfil"
        tools:layout="@layout/fragment_client_profile" />

    <fragment
        android:id="@+id/establishmentDetailFragment"
        android:name="com.example.styloandroid.ui.client.booking.EstablishmentDetailFragment"
        android:label="Detalhes do Estabelecimento"
        tools:layout="@layout/fragment_establishment_detail" />

    <fragment
        android:id="@+id/providerAgendaFragment"
        android:name="com.example.styloandroid.ui.manager.agenda.ProviderAgendaFragment"
        android:label="Minha Agenda"
        tools:layout="@layout/fragment_provider_agenda" />

    <fragment
        android:id="@+id/clientAppointmentsFragment"
        android:name="com.example.styloandroid.ui.client.appointments.ClientAppointmentsFragment"
        android:label="Meus Agendamentos"
        tools:layout="@layout/fragment_client_appointments" />

    <fragment
        android:id="@+id/servicesFragment"
        android:name="com.example.styloandroid.ui.manager.services.ServicesFragment"
        android:label="Meus Serviços"
        tools:layout="@layout/fragment_services" />

    <fragment
        android:id="@+id/teamManagementFragment"
        android:name="com.example.styloandroid.ui.manager.team.TeamManagementFragment"
        android:label="Minha Equipe"
        tools:layout="@layout/fragment_team_management" />

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.styloandroid.ui.manager.home.HomeFragment"
        android:label="Home Profissional"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home_to_login"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_home_to_services"
            app:destination="@id/servicesFragment" />

        <action
            android:id="@+id/action_home_to_agenda"
            app:destination="@id/providerAgendaFragment" />

        <action
            android:id="@+id/action_home_to_teamManagement"
            app:destination="@id/teamManagementFragment" />

        <action
            android:id="@+id/action_home_to_settings"
            app:destination="@id/establishmentSettingsFragment" />
    </fragment>

    <fragment
        android:id="@+id/establishmentSettingsFragment"
        android:name="com.example.styloandroid.ui.manager.settings.EstablishmentSettingsFragment"
        android:label="Configurações"
        tools:layout="@layout/fragment_establishment_settings" />

</navigation>